<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kakyenlam.friendfinder.MeetingList">

    <TextView
        android:id="@+id/meetingListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting List"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/meetingListBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/sortAscendingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Ascending"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/meetingList"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/sortDescendingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Descending"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/meetingList"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/meetingList"
        android:layout_width="358dp"
        android:layout_height="330dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meetingListTitle" />
</android.support.constraint.ConstraintLayout>
