<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kakyenlam.friendfinder.UserSettings">

    <EditText
        android:id="@+id/suggestionSeconds"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintLeft_toRightOf="@+id/textView16"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:text="Alarm Reminder Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintLeft_toLeftOf="@+id/suggestionMinute"
        app:layout_constraintTop_toBottomOf="@+id/suggestionMinute" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggestion Polling TIme"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/alarmWarningMinute"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/alarmWarningMinute" />

    <EditText
        android:id="@+id/alarmReminderMinutes"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:text="minutes"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintLeft_toRightOf="@+id/suggestionMinute"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:text="seconds"
        app:layout_constraintLeft_toRightOf="@+id/suggestionSeconds"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/suggestionMinute"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:text="minutes"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintLeft_toRightOf="@+id/alarmReminderMinutes"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/userSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/alarmWarningTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:text="Alarm Warning Before Meeting"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintLeft_toLeftOf="@+id/userSettingsTitle"
        app:layout_constraintTop_toBottomOf="@+id/userSettingsTitle" />

    <EditText
        android:id="@+id/alarmWarningMinute"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="@+id/alarmWarningTimeTitle"
        app:layout_constraintTop_toBottomOf="@+id/alarmWarningTimeTitle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_marginLeft="0dp"
        android:text="minutes"
        app:layout_constraintLeft_toRightOf="@+id/alarmWarningMinute"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/alarmWarningTimeTitle" />

    <Button
        android:id="@+id/settingsConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_change"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/settingsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
